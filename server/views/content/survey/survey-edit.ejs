<div class="container">
  <div class="row">
    <div class="offset-md-3 col-md-6">
      <h1><%= title %></h1>

      <form class="form" method="POST">
        <div class="form-group">
          <label for="titleTextField">Title</label>
          <input type="text" class="form-control" id="titleTextField" placeholder="Enter the Title" name="name"
            value="<%= survey.title %>" required>
        </div>

        <div class="form-group">
          <label for="subtitleTextField">Subtitle</label>
          <input type="text" class="form-control" id="subtitleTextField" placeholder="Subtitle" name="subtitle"
            value="<%= survey.subtitle %>" required>
        </div>

        <div class="form-group">
          <label for="descriptionTextField">Description</label>
          <input type="text" class="form-control" id="descriptionTextField" placeholder="Description" name="description"
            value="<%= survey.description %>" required>
        </div>

        <!--added questions to add-->
        <div class="w-100">
          <label class="sr-only" for="enterQuestion1">Edit Question 1</label>
          <div class="input-group mb-4">
            <div class="input-group-prepend">
              <div class="input-group-text"><i class="fas fa-check-square"></i></div>
            </div>
            <input type="text" class="form-control" id="enterQuestion1" name="enterQuestion1"
              placeholder="Enter Question 1" required>
          </div>
        </div>

        <div class="w-100">
          <label class="sr-only" for="enterQuestion2">Edit Question 2</label>
          <div class="input-group mb-4">
            <div class="input-group-prepend">
              <div class="input-group-text"><i class="fas fa-check-square"></i></div>
            </div>
            <input type="text" class="form-control" id="enterQuestion2" name="enterQuestion2"
              placeholder="Enter Question 2" required>
          </div>
        </div>

        <div class="w-100">
          <label class="sr-only" for="enterQuestion3">Edit Question 3</label>
          <div class="input-group mb-4">
            <div class="input-group-prepend">
              <div class="input-group-text"><i class="fas fa-check-square"></i></div>
            </div>
            <input type="text" class="form-control" id="enterQuestion3" name="enterQuestion3"
              placeholder="Enter Question 3" required>
          </div>
        </div>

        <!-- if the title property position value is greater than -1 show submit button, else show ADD-->
        <% if (title.search("Edit") > -1 ) { %>
        <button type="submit" class="btn btn-primary"><i class="fa fa-check-square-o"></i> Submit</button>
        <% } else { %>
        <button type="submit" class="btn btn-primary">
          <i class="fa fa-check"></i> Add
        </button>
        <% } %>

      </form>
    </div>

  </div>
</div>