<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>

            <form class="form" method="POST">
                <div class="form-group">
                    <label for="titleTextField">Title</label>
                    <input type="text" class="form-control"
                    id="titleTextField"
                    placeholder="Enter the Title"
                    name="name" 
                    value="<%= survey.title %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="subtitleTextField">Subtitle</label>
                    <input type="text" class="form-control" id="subtitleTextField"
                    placeholder="Subtitle"
                    name="subtitle" 
                    value="<%= survey.subtitle %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="descriptionTextField">Description</label>
                    <input type="text" class="form-control"
                    id="descriptionTextField"
                    placeholder="Description"
                    name="description" 
                    value="<%= survey.description %>"
                    required>
                </div>

                <div class="w-100">
                <label class="sr-only" for="enterQuestion1">Edit Question 1</label>
                <div class="input-group mb-4">
                  <div class="input-group-prepend">
                    <div class="input-group-text"><i class="fas fa-check-square"></i></div>
                  </div>
                  <input type="text" class="form-control" id="enterQuestion1" name="enterQuestion1" placeholder="Enter Question 1" required>
                </div>
              </div>

              <div class="w-100">
                <label class="sr-only" for="enterQuestion2">Edit Question 2</label>
                <div class="input-group mb-4">
                  <div class="input-group-prepend">
                    <div class="input-group-text"><i class="fas fa-check-square"></i></div>
                  </div>
                  <input type="text" class="form-control" id="enterQuestion2" name="enterQuestion2" placeholder="Enter Question 2" required>
                </div>
              </div>

              <div class="w-100">
                <label class="sr-only" for="enterQuestion3">Edit Question 3</label>
                <div class="input-group mb-4">
                  <div class="input-group-prepend">
                    <div class="input-group-text"><i class="fas fa-check-square"></i></div>
                  </div>
                  <input type="text" class="form-control" id="enterQuestion3" name="enterQuestion3" placeholder="Enter Question 3" required>
                </div>
              </div>   



                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Edit</button>
                
                    <a href="/survey-list" class="btn btn-warning">
                        <i class="fas fa-undo"></i> Cancel</a>

            </form>
        </div>

    </div>
</div>
